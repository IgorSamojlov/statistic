<p id="notice"><%= notice %></p>

<h1>State Issues</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @state_issues.each do |state_issue| %>
      <tr>
        <td><%= link_to 'Show', state_issue %></td>
        <td><%= link_to 'Edit', edit_state_issue_path(state_issue) %></td>
        <td><%= link_to 'Destroy', state_issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New State Issue', new_state_issue_path %>

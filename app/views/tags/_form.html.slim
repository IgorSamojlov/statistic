.form
  = form_with(model: tag, local: true) do |form|
    - if tag.errors.any?
      div id="error_explanation"
        h2 = pluralize(tag.errors.count, "error")

        ul
          tag.errors.full_messages.each do |message|
            li = message

    = form.label :name, 'Название', class: 'form-label'
    = form.text_field :name, class: 'form-control'

    br

    .actions
      = form.submit 'Сохранить', class: 'btn btn-outline-success'

<p id="notice"><%= notice %></p>

<h1>Priority Issues</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @priority_issues.each do |priority_issue| %>
      <tr>
        <td><%= link_to 'Show', priority_issue %></td>
        <td><%= link_to 'Edit', edit_priority_issue_path(priority_issue) %></td>
        <td><%= link_to 'Destroy', priority_issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Priority Issue', new_priority_issue_path %>

.form
  = form_with(model: priority_issue, local: true) do |form|
    - if priority_issue.errors.any?
      div id="error_explanation"
        h2 = pluralize(priority_issue.errors.count, "error")

        ul
          priority_issue.errors.full_messages.each do |message|
            li = message

    = form.label :name, 'Название', class: 'form-label'
    = form.text_field :name, class: 'form-control'

    br

    .actions
      = form.submit 'Сохранить', class: 'btn btn-outline-success'
